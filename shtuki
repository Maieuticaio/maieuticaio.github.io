<body>
  <main class="wall" aria-label="Wall">
    <div class="item">
      <a href="box1.html" aria-label="box1">
        <img
          class="media"
          id="box1"
          src="https://maieuticaio.github.io/folder/store/puppets/box1.png"
          alt="box1"
        />
      </a>
    </div>
  </main>

  <script>
    // 170px — точка оси вращения НА ИСХОДНОМ изображении
    const ORIGIN_Y_ON_SOURCE = 170;

    const img = document.getElementById("box1");

    function setScaledOrigin() {
      // ждём, пока браузер узнает натуральный размер изображения
      if (!img.naturalWidth) return;

      // масштаб по ширине (пропорции сохраняются, поэтому достаточно)
      const scale = img.clientWidth / img.naturalWidth;

      // пересчитываем ось вращения пропорционально уменьшению/увеличению
      const originY = ORIGIN_Y_ON_SOURCE * scale;

      img.style.transformOrigin = `50% ${originY}px`;
    }

    if (img.complete) setScaledOrigin();
    else img.addEventListener("load", setScaledOrigin);

    window.addEventListener("resize", setScaledOrigin);
  </script>
</body>
</html>
