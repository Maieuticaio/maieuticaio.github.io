  <style>
    * { box-sizing: border-box; }

    body {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
      overflow: hidden;
    }

    /* ================= MAIN (КАРУСЕЛЬ) ================= */
    .page {
      position: fixed;
      inset: 0;
      background: #fff;
      transition: opacity 0.4s ease;
    }

    .page.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .gallery {
      height: 100vh;
      display: flex;
      align-items: center;
      gap: 80px;
      padding: 0 20vw;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
    }

    .gallery::-webkit-scrollbar { display: none; }

    .artist-card {
      flex: 0 0 320px;
      text-align: center;
      scroll-snap-align: center;
      cursor: pointer;
      opacity: 0.6;
      transform: scale(0.92);
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .artist-card.active {
      opacity: 1;
      transform: scale(1);
    }

    .artist-card img {
      width: 100%;
      aspect-ratio: 1 / 1;
      object-fit: cover;
      border-radius: 14px;
    }

    .name {
      margin-top: 14px;
      font-size: 1rem;
    }

    .quote {
      margin-top: 6px;
      font-style: italic;
      font-size: 0.9rem;
      color: #666;
    }

    /* ================= ARTIST PAGE ================= */
    .artist-page {
      position: fixed;
      inset: 0;
      overflow-y: auto;
      background: #fff;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease;
    }

    .artist-page.active {
      opacity: 1;
      pointer-events: auto;
    }

    .hero {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      text-align: center;
    }

    .image-frame {
      width: 360px;
      max-width: 90vw;
