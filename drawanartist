<div class="page" id="mainPage">
  <div class="gallery" id="gallery">

    <div class="artist-card" data-artist="0">
      <img src="https://picsum.photos/600?1">
      <div class="name">Юлия Живичина</div>
      <div class="quote">«Работа — это способ быть честной»</div>
    </div>

    <div class="artist-card" data-artist="1">
      <img src="https://picsum.photos/600?2">
      <div class="name">Анна Иванова</div>
      <div class="quote">«Искусство не обязано быть удобным»</div>
    </div>

  </div>
</div>

<!-- ================= ARTIST ================= -->
<div class="artist-page" id="artistPage">

  <div class="back" id="back">← назад</div>

  <section class="hero">
    <div class="image-frame" id="imageFrame">
      <img id="heroImage">
    </div>

    <div class="name" id="artistName"></div>
    <div class="quote" id="artistQuote"></div>

    <audio controls>
      <source src="audio.mp3" type="audio/mpeg">
    </audio>
  </section>

  <section class="interview" id="interview"></section>

  <button class="to-top" id="toTop">↑</button>
</div>

<script>
  /* ===== DATA ===== */
  const artists = [
    {
      name: "Юлия Живичина",
      images: [
        "https://picsum.photos/600?1",
        "https://picsum.photos/600?11",
        "https://picsum.photos/600?12"
      ],
      quotes: [
        "«Работа — это способ быть честной»",
        "«Я не объясняю, я присутствую»",
        "«Важно не украшать»"
      ],
      interview: `
        <p>Я никогда не думала о себе как о художнике в классическом смысле.</p>
        <p>Работа всегда начинается с внутреннего напряжения.</p>
        <p>Современное искусство для меня — форма присутствия.</p>
      `
    },
    {
      name: "Анна Иванова",
      images: [
        "https://picsum.photos/600?2",
        "https://picsum.photos/600?21",
        "https://picsum.photos/600?22"
      ],
      quotes: [
        "«Искусство не обязано быть удобным»",
        "«Я работаю с уязвимостью»",
        "«Тишина — часть формы»"
      ],
      interview: `
        <p>Меня интересует пограничное состояние.</p>
        <p>Материал — это свидетель.</p>
        <p>Я не ищу одобрения.</p>
      `
    }
  ];

  /* ===== MAIN SNAP ===== */
  const cards = document.querySelectorAll('.artist-card');
  const gallery = document.getElementById('gallery');

  function updateActive() {
    const center = window.innerWidth / 2;
    cards.forEach(c => {
      const r = c.getBoundingClientRect();
      c.classList.toggle('active', Math.abs(center - (r.left + r.width/2)) < r.width/2);
    });
  }

  gallery.addEventListener('scroll', updateActive);
  window.addEventListener('load', updateActive);

  /* ===== TRANSITION ===== */
  const mainPage = document.getElementById('mainPage');
  const artistPage = document.getElementById('artistPage');

  const heroImage = document.getElementById('heroImage');
  const artistName = document.getElementById('artistName');
  const artistQuote = document.getElementById('artistQuote');
  const interview = document.getElementById('interview');
  const imageFrame = document.getElementById('imageFrame');

  let slide = 0;
  let timer;

  cards.forEach(card => {
    card.onclick = () => openArtist(+card.dataset.artist);
  });

  function openArtist(id) {
    const a = artists[id];
    slide = 0;

    heroImage.src = a.images[0];
    artistName.textContent = a.name;
    artistQuote.textContent = a.quotes[0];
    interview.innerHTML = a.interview;

    mainPage.classList.add('hidden');
    artistPage.classList.add('active');

    clearInterval(timer);
    timer = setInterval(() => nextSlide(a), 3000);

    imageFrame.onclick = () => {
      clearInterval(timer);
      nextSlide(a);
      timer = setInterval(() => nextSlide(a), 3000);
    };
  }

  function nextSlide(a) {
    slide = (slide + 1) % a.images.length;
    heroImage.src = a.images[slide];
    artistQuote.textContent = a.quotes[slide];
  }

  document.getElementById('back').onclick = () => {
    artistPage.classList.remove('active');
    mainPage.classList.remove('hidden');
    clearInterval(timer);
    window.scrollTo(0,0);
  };

document.getElementById('toTop').onclick = () => {
  document.getElementById('artistPage')
    .scrollTo({ top: 0, behavior: 'smooth' });
};
</script>

</body>
</html>
